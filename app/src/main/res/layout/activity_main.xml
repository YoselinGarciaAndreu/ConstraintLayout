    </View>

    <View
        android:id="@+id/L5N3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/L4N2"
        app:layout_constraintStart_toEndOf="@+id/L4N2"
        >
    </View>

    <View
        android:id="@+id/L5N1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/L4N1"
        app:layout_constraintEnd_toStartOf="@id/L4N1"
        >
    </View>



